# Shared
NODE_ENV=development
DATABASE_URL=postgresql://ezjob:ezjob@127.0.0.1:5432/ezjob?schema=public
REDIS_URL=redis://127.0.0.1:6379

# API
API_HOST=0.0.0.0
API_PORT=8000

# Worker
WORKER_CONCURRENCY=5
INGESTION_POLL_INTERVAL_MS=60000
ORCHESTRATION_LOCK_KEY=ezjob:worker:orchestration:lock
# Set to "fixture" for deterministic demo data, or "live" for Remotive + WeWorkRemotely
INGESTION_MODE=fixture
# Optional path override when INGESTION_MODE=fixture
INGESTION_FIXTURE_FILE=apps/worker/src/ingestion/connectors/fixtures/demo-jobs.json

# Telegram notifications (required for real Telegram delivery)
TELEGRAM_BOT_TOKEN=
# Set one of these:
TELEGRAM_CHAT_ID_DEFAULT=
# TELEGRAM_CHAT_ID_MAP={"<user-uuid>":"<chat-id>"}
TELEGRAM_CHAT_ID_MAP=
